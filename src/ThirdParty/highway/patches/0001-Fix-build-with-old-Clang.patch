Subject: [PATCH 1/2] Fix build with old Clang

---
 hwy/nanobenchmark.cc | 13 +++++++++++++
 hwy/targets.cc       | 13 +++++++++++++
 2 files changed, 26 insertions(+)

diff --git a/hwy/nanobenchmark.cc b/hwy/nanobenchmark.cc
index d13b5e7..3fda2a2 100644
--- a/hwy/nanobenchmark.cc
+++ b/hwy/nanobenchmark.cc
@@ -373,7 +373,20 @@ void Cpuid(const uint32_t level, const uint32_t count,
   uint32_t b;
   uint32_t c;
   uint32_t d;
+#if HWY_COMPILER_CLANG && !defined __cpuid_count
+#if __i386__
+  __asm("cpuid" : "=a"(a), "=b" (b), "=c"(c), "=d"(d) \
+      : "0"(level), "2"(count))
+#else
+  __asm("  xchgq  %%rbx,%q1\n" \
+        "  cpuid\n" \
+        "  xchgq  %%rbx,%q1" \
+      : "=a"(a), "=r" (b), "=c"(c), "=d"(d) \
+      : "0"(level), "2"(count));
+#endif
+#else
   __cpuid_count(level, count, a, b, c, d);
+#endif
   abcd[0] = a;
   abcd[1] = b;
   abcd[2] = c;
diff --git a/hwy/targets.cc b/hwy/targets.cc
index 1258cc4..8e31d54 100644
--- a/hwy/targets.cc
+++ b/hwy/targets.cc
@@ -79,7 +79,20 @@ HWY_INLINE void Cpuid(const uint32_t level, const uint32_t count,
   uint32_t b;
   uint32_t c;
   uint32_t d;
+#if HWY_COMPILER_CLANG && !defined __cpuid_count
+#if __i386__
+  __asm("cpuid" : "=a"(a), "=b" (b), "=c"(c), "=d"(d) \
+      : "0"(level), "2"(count))
+#else
+  __asm("  xchgq  %%rbx,%q1\n" \
+        "  cpuid\n" \
+        "  xchgq  %%rbx,%q1" \
+      : "=a"(a), "=r" (b), "=c"(c), "=d"(d) \
+      : "0"(level), "2"(count));
+#endif
+#else
   __cpuid_count(level, count, a, b, c, d);
+#endif
   abcd[0] = a;
   abcd[1] = b;
   abcd[2] = c;
